<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image %>
      <table class="table">
        <tbody><tr></tr>
        <tr>
	        <th>name</th>
	        <th><%= @user.name %></th>
        <tbody><tr></tr>
          <tr>
          </tr>
        <tr>
	        <th>introduction</th>
	          <th></th>
        </tr>
        </tbody>
      </table>
      <% if @user == current_user %>
        <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
      <% end %>

      <div class="row">
        <h2 class="mt-3">New book</h2>
        <form action="/books" accept-charset="UTF-8" method="post">
          <div class="form-group">
            <label for="book_title">Title</label>
            <input class="form-control book_title" type="text" name="book[title]" id="book_title">
          </div>
            <div class="form-group">
            <label for="book_opinion">Opinion</label>
            <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
          </div>
          <div class="form-group">
            <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
          </div>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
