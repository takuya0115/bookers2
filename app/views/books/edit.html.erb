<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |book| %>

      <div class="form-group">
        <label for="book_title">Title</label></br>
        <%= book.text_field :title %>
      </div>

      <div class="form-group">
        <label for="book_opinion">Opinion</label></br>
        <%= book.text_area :body %>
      </div>

      <%= book.submit 'Update Book' %>
      <% end %>

    </div>
  </div>
</div>