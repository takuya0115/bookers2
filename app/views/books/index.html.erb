<% @books.each do |book| %>
<div>
  <%= image_tag book.get_image %>
  <p>投稿ユーザー画像：<%= image_tag 'sample-author1.jpg' %></p>
  <p>ショップ名：<%= book.shop_name %></p>
  <p>説明：<%= book.caption %></p>
  <p>ユーザーネーム：<%= book.user.name %></p>
</div>

  <h4>ショップ名</h4>
    <%= f.text_field :shop_name %>
  <h4>説明</h4>
    <%= f.text_area :caption %>
  <%= f.submit '投稿' %>