<p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <%= render 'users/list', user: @user, book: @new_book %>

      <div class="col-md-8 offset-md-1">
        <h2>Books detail</h2>
        <table class="table table-hover table-inverse">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user.id) do %>
                  <%= image_tag @book.user.get_profile_image(100, 100) %></br>
                  <%= @user.name %>
                <% end %>
              </td>
              <td><%= link_to @book.title, "/books/#{@book.id}" %></td>
              <td><%= @book.body %></td>
              <td>
                <% if @user == current_user %>
                <p><%= link_to "Edit", edit_book_path(@book) %></p>
                <% end %>
              </td>
              <td>
                <% if @user == current_user %>
                <p><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %></p>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>


